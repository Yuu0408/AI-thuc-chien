{
  "version": 2,
  "builds": [
    {
      "src": "web_app/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "web_app/frontend/dist"
      }
    },
    {
      "src": "web_app/backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "web_app/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "web_app/frontend/dist/index.html"
    }
  ]
}
